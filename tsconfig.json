{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
      "rootDir": "./src",
      "outDir": "./dist",

    // Environment Settings
    // *** KEY CHANGE 1: Use NodeNext for ES Modules in Node.js ***
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022", // Updated for better compatibility with modern Node.js

      "types": ["node"],
      "lib": ["esnext"],

    // Other Outputs
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,

    // Stricter Typechecking Options
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,

    // Recommended Options
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "verbatimModuleSyntax": false,
      "isolatedModules": true,
      "noUncheckedSideEffectImports": true,
      "moduleDetection": "force",
      "skipLibCheck": true,
  }
}
